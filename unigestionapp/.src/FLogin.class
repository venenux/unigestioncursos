' Gambas class file

Public Sub Form_Open()

  btnlogin.Text = "Entrar interfaz"
  btnsalir.Text = "Salir y cerrar"

End


Public Sub btnlogin_Click()
  
  Dim seguir1, seguir2 As Boolean = False
  
  seguir1 = MMainutils.alertemtpy(usuario_nombre)
  seguir2 = MMainutils.alertemtpy(usuario_clave)
  If Not seguir1 Or Not seguir2 Then Return
  
  If Len(usuario_nombre.Text) > 6 And Len(usuario_clave.Text) > 6 Then
    Me.Close(-1)
    Return
  Endif
  Message.Info("login incorrecto, devuelve no true a main")
  Me.Close(0)
  
End

Public Sub btnsalir_Click()
  
  Me.Close(1)
  
End
